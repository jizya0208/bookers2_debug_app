<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, format: 'jpg', size: "100x100", fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id === current_user.id %>
          <td class="book_rate", data-score="<%= @book.rate %>"></td>
          <td class="favorite_btn">
            <%= render 'favorites/favorite_btn', book: @book %>
          </td>
          
          <td id="comment_count_<%= @book.id %>">
            コメント数：<%= @book.book_comments.count %>
          </td>
          
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>

          
          
        </tr>
      </table>
      
      
  　<!--コメント一覧-->
  　<div class="book_comment_index">
  　  <%= render 'book_comments/index', book: @book %>
  　</div>
  　
    <!--コメントフォーム-->
    <div class="book_comment_form">
      <%= render partial: 'book_comments/form', locals: {book: @book, book_comment: @book_comment} %>
    </div>
    
    <h3>投稿数の前日比・前週比</h3>

<table class="table">
  <row>
    <thead>
      <th>今日の投稿数</th>
      <th>前日の投稿数</th>
      <th>前日比</th>
    </thead>
  <row>
  <row>
    <tbody>
      <td><%= @book_today %></td>
      <td><%= @book_yesterday %></td>
      <td><%= @previous_day_ratio %>%</td>
    </tbody>
  </row>
  <row>
    <thead>
      <th>今週の投稿数</th>
      <th>先週の投稿数</th>
      <th>前週比</th>
    </thead>
  </row>
  <row>
    <tbody>
      <td><%= @book_this_week %></td>
      <td><%= @book_last_week %></td>
      <td><%= @previous_week_ratio %>%</td>
    </tbody>
  </row>
</table>
    
    </div>
  </div>
</div>


<script>
  $('.book_rate').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
